---
import MainLayout from "../layouts/MainLayout.astro";

const { content } = Astro.props;
---

<MainLayout title={content.title} description={content.description}>
  <div class="container w-screen md:max-w-4xl max-w-xs p-5">
    <p class="text-2xl md:text-4xl font-extrabold dark:text-slate-200">
      {content.company}
    </p>
    <p class="my-4 text-lg text-gray-500 dark:text-slate-400">
      {content.summary}
    </p>
    <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">
      <slot />
    </p>
  </div>
</MainLayout>

<style>
  ul {
    list-style-type: disc;
  }
</style>
