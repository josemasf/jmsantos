---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

const { content } = Astro.props;
---

<html lang={content.lang || "en"}>
  <head>
    <MainHead title={content.title} description={content.description} />
    <style>
      ul {
        list-style-type: disc;
      }
    </style>
  </head>
  <body class="dark:bg-gray-800 dark:text-white">
    <Nav />
    <div class="container w-screen md:max-w-4xl max-w-xs p-5">
      <p class="text-2xl md:text-4xl font-extrabold dark:text-white">
        {content.company}
      </p>
      <p class="my-4 text-lg text-gray-500">{content.sumary}</p>
      <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">
        <slot />
      </p>
    </div>

    <Footer />
  </body>
</html>
