---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

const { content } = Astro.props;
---

<html lang={content.lang || "en"}>
  <head>
    <MainHead title={content.title} description={content.description} />
    <style>
      .content {
        font-size: var(--f-u1);
        line-height: 2.2;
        max-width: 50em;
        margin: auto;
      }

      .wrapper {
        padding-bottom: 4em;
        margin-bottom: 4em;
      }

      footer {
        text-align: center;
        margin-top: 3rem;
      }
    </style>
  </head>
  <body class="dark:bg-gray-800 dark:text-white">
    <Nav />
    <div class="container max-w-screen-lg">
      <h2 class="text-4xl font-extrabold dark:text-white">{content.company}</h2>
      <p class="my-4 text-lg text-gray-500">{content.sumary}</p>
      <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">
        <slot />
      </p>
    </div>
    <Footer />
  </body>
</html>
