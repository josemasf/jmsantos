---
import MainLayout from "../layouts/MainLayout.astro";

const { content } = Astro.props;
---

<MainLayout title={content.title} description={content.description}>
  <section>
    <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
      <div class="max-w-3xl">
        <div class="text-3xl font-bold sm:text-4xl h-2">
          {content.title}
        </div>
      </div>

      <div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
        <div class="relative h-64 overflow-hidden sm:h-80 lg:h-full">
          <img
            alt="Party"
            src={content.img}
            loading="lazy"
            class="absolute inset-0 h-full w-full object-cover"
          />
        </div>

        <div class="lg:py-16">
          <article class="space-y-4 text-gray-600 dark:text-slate-200">
            <p>
              {content.description}
            </p>
          </article>
        </div>
      </div>
    </div>
  </section>

  <div
    class="container md:max-w-screen-md max-w-fit p-5 prose md:prose-lg lg:prose-xl"
  >
    <article
      class="space-y-4 text-gray-600 dark:text-slate-400 prose lg:prose-xl prose-h2:dark:text-slate-200 prose-h1:dark:text-slate-300 prose-h3:dark:text-slate-200 prose-a:dark:text-orange-400"
    >
      <slot />
    </article>
  </div>
</MainLayout>
