---
const { frontmatter, url } = Astro.props.job;
---

<div
  class="absolute w-4 h-4 bg-indigo-500 rounded-full mt-1.5 -left-[9px] border-4 border-white dark:border-gray-800 shadow-sm"
>
</div>
<div class="flex flex-col gap-1">
  <time
    class="text-sm font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400"
    >{frontmatter.from} â€” {frontmatter.to}
  </time>
  <h3 class="text-xl font-bold text-gray-900 dark:text-white">
    {frontmatter.company}
  </h3>
  <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl leading-relaxed">
    {frontmatter.summary}
  </p>
  <div class="mt-4">
    <a
      href={url}
      class="inline-flex items-center text-sm font-bold text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-200 transition-colors"
    >
      Ver detalles del puesto
      <svg
        class="ml-1 w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </a>
  </div>
</div>
