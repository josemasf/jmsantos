<script is:inline>
  window.updateThemeIcons = function() {
    const isDark = document.documentElement.classList.contains("dark");
    const lightIco = document.getElementById("light-theme-icon");
    const darkIco = document.getElementById("dark-theme-icon");

    if (lightIco && darkIco) {
      if (isDark) {
        lightIco.classList.add("hidden");
        darkIco.classList.remove("hidden");
      } else {
        lightIco.classList.remove("hidden");
        darkIco.classList.add("hidden");
      }
    }
  }

  window.handleThemeToggle = function() {
    const isDark = document.documentElement.classList.toggle("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
    updateThemeIcons();
  }

  window.initTheme = function() {
    const theme = localStorage.getItem("theme") || 
      (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
    
    document.documentElement.classList.toggle("dark", theme === "dark");
    updateThemeIcons();
  }

  // Initial load
  initTheme();

  // After View Transitions swap
  document.addEventListener("astro:after-swap", initTheme);
</script>